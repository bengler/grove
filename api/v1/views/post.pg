node :post => mypost do
  attributes :uid, :created_by, :created_at, :updated_at, :tags, :external_id, :paths, :restricted, :conflicted
  if mypost.lon && mypost.lat
    node :geo => mypost.geo do
      attributes :lon, :lat
    end
  end
  node :id => mypost.uid
  node :document => mypost.merged_document
  node :may_edit => mypost.editable_by?(current_identity)
end
